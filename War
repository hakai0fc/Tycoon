local FuncoesEspeciaisTab = Window:MakeTab({
    Name = "FUNÇÕES OP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})
FuncoesEspeciaisTab:AddSection({ Name = "PODERES" })

local flyAtivo = false
local flySpeed = 50
local noclipAtivo = false
local antiVoidAtivo = false
local flyWasActiveBeforeDeath = false
local noclipWasActiveBeforeDeath = false

local flyConnection, noclipConnection, antiVoidConnection
local BG, BV
local originalCanCollide = {}

local function safeRestoreHumanoid(humanoid)
    if humanoid and humanoid.Parent then
        pcall(function()
            humanoid.PlatformStand = false
            humanoid.AutoRotate = true
        end)
    end
end

local function safeStopFly()
    if flyConnection then flyConnection:Disconnect() flyConnection=nil end
    if BG then BG:Destroy() BG=nil end
    if BV then BV:Destroy() BV=nil end
    local char = LP.Character
    if char then
        safeRestoreHumanoid(char:FindFirstChildOfClass("Humanoid"))
    end
end

local function startFly(char)
    safeStopFly()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end

    BG = Instance.new("BodyGyro")  
    BV = Instance.new("BodyVelocity")  
    BG.MaxTorque = Vector3.new(9e9,9e9,9e9)
    BG.P = 9e4
    BG.CFrame = root.CFrame
    BG.Parent = root

    BV.MaxForce = Vector3.new(9e9,9e9,9e9)
    BV.Velocity = Vector3.zero
    BV.Parent = root

    humanoid.PlatformStand = true
    humanoid.AutoRotate = false

    flyConnection = RunService.RenderStepped:Connect(function()
        if not flyAtivo or not root.Parent then return end
        local cam = workspace.CurrentCamera
        local move = Vector3.zero
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then move += cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then move -= cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then move -= cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then move += cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then move += Vector3.new(0,1,0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then move -= Vector3.new(0,1,0) end
        BV.Velocity = move.Magnitude>0 and move.Unit*flySpeed or Vector3.zero
        BG.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
    end)
end

local function startNoclip(char)
    if noclipConnection then noclipConnection:Disconnect() end
    originalCanCollide = {}
    for _, part in ipairs(char:GetDescendants()) do
        if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
            originalCanCollide[part] = part.CanCollide
            part.CanCollide = false
        end
    end
    noclipConnection = RunService.Heartbeat:Connect(function()
        if not noclipAtivo or not char or not char.Parent then return end
        for part, _ in pairs(originalCanCollide) do
            if part and part.Parent then
                part.CanCollide = false
            end
        end
    end)
end

local function stopNoclip()
    noclipAtivo = false
    if noclipConnection then noclipConnection:Disconnect() noclipConnection = nil end
    for part, originalValue in pairs(originalCanCollide) do
        if part and part.Parent then
            part.CanCollide = originalValue
        end
    end
    originalCanCollide = {}
end

local function startAntiVoid(char)
    if antiVoidConnection then antiVoidConnection:Disconnect() end
    antiVoidConnection = RunService.Heartbeat:Connect(function()
        if not antiVoidAtivo or not char or not char:FindFirstChild("HumanoidRootPart") then return end
        local root = char:FindFirstChild("HumanoidRootPart")
        if root.Position.Y < 435 then
            root.Velocity = Vector3.zero
            root.CFrame = CFrame.new(root.Position.X, 440, root.Position.Z)
        end
    end)
end

local function stopAntiVoid()
    if antiVoidConnection then
        antiVoidConnection:Disconnect()
        antiVoidConnection = nil
    end
end

local function onCharacter(char)
    char:WaitForChild("HumanoidRootPart")
    local humanoid = char:WaitForChild("Humanoid")

    humanoid.Died:Connect(function()
        if flyAtivo then
            flyAtivo = false
            safeStopFly()
            OrionLib:MakeNotification({Name="Fly",Content="❌ Fly Desativado (Você Morreu)",Image="rbxassetid://4483345998",Time=2})
        end
        if noclipAtivo then
            stopNoclip()
            OrionLib:MakeNotification({Name="Noclip",Content="❌ Noclip Desativado (Você Morreu)",Image="rbxassetid://4483345998",Time=2})
        end
    end)

    if antiVoidAtivo then startAntiVoid(char) end
end

LP.CharacterAdded:Connect(onCharacter)
if LP.Character then onCharacter(LP.Character) end

-- ========== TOGGLES ==========
FuncoesEspeciaisTab:AddToggle({
    Name = "Noclip",
    Default = false,
    Callback = function(state)
        noclipAtivo = state
        if state then
            if LP.Character then startNoclip(LP.Character) end
            OrionLib:MakeNotification({Name="Noclip",Content="✅ Noclip Ativado!",Image="rbxassetid://4483345998",Time=2})
        else
            stopNoclip()
            OrionLib:MakeNotification({Name="Noclip",Content="❌ Noclip Desativado!",Image="rbxassetid://4483345998",Time=2})
        end
    end
})

FuncoesEspeciaisTab:AddToggle({
    Name = "Fly",
    Default = false,
    Callback = function(state)
        flyAtivo = state
        if state then
            if LP.Character then startFly(LP.Character) end
            OrionLib:MakeNotification({Name="Fly",Content="✅ Fly Ativado!",Image="rbxassetid://4483345998",Time=2})
        else
            safeStopFly()
            OrionLib:MakeNotification({Name="Fly",Content="❌ Fly Desativado!",Image="rbxassetid://4483345998",Time=2})
        end
    end
})
FuncoesEspeciaisTab:AddToggle({
    Name = "Anti Void",
    Default = false,
    Save = false,
    Flag = "anti_void",
    Callback = function(state)
        antiVoidAtivo = state
        if state then
            if LP.Character then startAntiVoid(LP.Character) end
            OrionLib:MakeNotification({
                Name="Anti Void",
                Content="✅ Anti Void ativado! (Impede cair abaixo de Y=435)",
                Image="rbxassetid://4483345998",
                Time=2
            })
        else
            stopAntiVoid()
            OrionLib:MakeNotification({
                Name="Anti Void",
                Content="❌ Anti Void desativado!",
                Image="rbxassetid://4483345998",
                Time=2
            })
        end
    end
})

FuncoesEspeciaisTab:AddSlider({
    Name = "Fly Speed",
    Min = 0,
    Max = 2500,
    Default = 50,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "Speed",
    Callback = function(Value)
        flySpeed = Value
    end
})

pcall(function()
    OrionLib:Init()
end)
