local FuncoesEspeciaisTab = Window:MakeTab({
    Name = "FUNÇÕES OP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})
FuncoesEspeciaisTab:AddSection({ Name = "PODERES" })

local noclipAtivo = false
local flyAtivo = false
local flySpeed = 50
local flyConnection, noclipConnection
local BG, BV
local flyWasActiveBeforeDeath = false

local function startNoclip()
    local char = LP.Character
    if not char then return end
    if noclipConnection then noclipConnection:Disconnect() end
    noclipConnection = RunService.Stepped:Connect(function()
        for _, part in ipairs(char:GetDescendants()) do
            if part:IsA("BasePart") and not part.Anchored then
                part.CanCollide = false
            end
        end
    end)
end

local function stopNoclip()
    if noclipConnection then
        noclipConnection:Disconnect()
        noclipConnection = nil
    end
    local char = LP.Character
    if not char then return end
    for _, part in ipairs(char:GetDescendants()) do
        if part:IsA("BasePart") and not part.Anchored then
            part.CanCollide = true
        end
    end
end

local function startFly()
    local char = LP.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end
    BG = Instance.new("BodyGyro")
    BG.MaxTorque = Vector3.new(9e9,9e9,9e9)
    BG.P = 9e4
    BG.CFrame = root.CFrame
    BG.Parent = root
    BV = Instance.new("BodyVelocity")
    BV.MaxForce = Vector3.new(9e9,9e9,9e9)
    BV.Velocity = Vector3.zero
    BV.Parent = root
    humanoid.PlatformStand = true
    humanoid.AutoRotate = false
    flyConnection = RunService.RenderStepped:Connect(function()
        if not flyAtivo then return end
        local cam = workspace.CurrentCamera
        local move = Vector3.zero
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then move += cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then move -= cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then move -= cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then move += cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then move += Vector3.new(0,1,0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then move -= Vector3.new(0,1,0) end
        BV.Velocity = move.Magnitude > 0 and move.Unit * flySpeed or Vector3.zero
        BG.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
    end)
end

local function stopFly()
    if flyConnection then flyConnection:Disconnect() flyConnection = nil end
    if BG then BG:Destroy() BG = nil end
    if BV then BV:Destroy() BV = nil end
    local char = LP.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.PlatformStand = false
        humanoid.AutoRotate = true
    end
end

local function toggleNoclip(state)
    noclipAtivo = state
    if noclipAtivo then
        startNoclip()
        OrionLib:MakeNotification({Name="Noclip",Content="✅ Noclip ativado!",Image="rbxassetid://4483345998",Time=2})
    else
        stopNoclip()
        OrionLib:MakeNotification({Name="Noclip",Content="❌ Noclip desativado!",Image="rbxassetid://4483345998",Time=2})
    end
end

local function toggleFly(state)
    flyAtivo = state
    if flyAtivo then
        startFly()
        OrionLib:MakeNotification({Name="Fly",Content="✅ Fly ativado!",Image="rbxassetid://4483345998",Time=2})
    else
        stopFly()
        OrionLib:MakeNotification({Name="Fly",Content="❌ Fly desativado!",Image="rbxassetid://4483345998",Time=2})
    end
end

LP.CharacterAdded:Connect(function(char)
    task.wait(1)
    local humanoid = char:WaitForChild("Humanoid")
    if noclipAtivo then
        startNoclip()
        OrionLib:MakeNotification({Name="Noclip",Content="♻️ Noclip reativado após renascer!",Image="rbxassetid://4483345998",Time=2})
    end
    if flyWasActiveBeforeDeath then
        flyAtivo = true
        startFly()
        OrionLib:MakeNotification({Name="Fly",Content="♻️ Fly reativado após renascer!",Image="rbxassetid://4483345998",Time=2})
        flyWasActiveBeforeDeath = false
    end
    humanoid.Died:Connect(function()
        if flyAtivo then
            flyWasActiveBeforeDeath = true
            flyAtivo = false
            stopFly()
            OrionLib:MakeNotification({Name="Fly",Content="❌ Fly desativado! (você morreu)",Image="rbxassetid://4483345998",Time=2})
        end
    end)
end)
FuncoesEspeciaisTab:AddToggle({
    Name = "Noclip",
    Default = false,
    Save = true,
    Flag = "noclip",
    Callback = toggleNoclip
})

FuncoesEspeciaisTab:AddToggle({
    Name = "Fly",
    Default = false,
    Save = true,
    Flag = "fly",
    Callback = toggleFly
})

FuncoesEspeciaisTab:AddSlider({
    Name = "Fly Speed",
    Min = 1,
    Max = 2500,
    Default = 50,
    Color = Color3.fromRGB(255,255,255),
    Save = true,
    Flag = "flySpeed",
    Callback = function(v)
        flySpeed = v
    end
})

OrionLib:Init()
