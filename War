local FuncoesEspeciaisTab = Window:MakeTab({
    Name = "FUNÇÕES OP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

FuncoesEspeciaisTab:AddSection({ Name = "PODERES" })

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local LP = Players.LocalPlayer

local noclipAtivo = false
local flyAtivo = false
local flySpeed = 50

local flyConnection
local noclipConnection
local BG
local BV

-- Reset completo das propriedades de voo
local function resetFlyProperties()
    local char = LP.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if not humanoid then return end
    if BG then BG:Destroy() BG=nil end
    if BV then BV:Destroy() BV=nil end
    humanoid.PlatformStand = false
    humanoid.AutoRotate = true
    humanoid.WalkSpeed = 16
    humanoid.JumpPower = 50
end

-- Desconecta Fly
local function disconnectFly()
    if flyConnection then flyConnection:Disconnect() flyConnection=nil end
    if BG then BG:Destroy() BG=nil end
    if BV then BV:Destroy() BV=nil end
end

-- Desconecta Noclip
local function disconnectNoclip()
    if noclipConnection then noclipConnection:Disconnect() noclipConnection=nil end
end

-- Inicia Noclip
local function startNoclip()
    local char = LP.Character
    if not char then return end
    disconnectNoclip()
    noclipConnection = RunService.Stepped:Connect(function()
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") and not part.Anchored then
                part.CanCollide = false
            end
        end
    end)
end

-- Inicia Fly
local function startFly()
    local char = LP.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end
    disconnectFly()
    
    BG = Instance.new("BodyGyro")
    BG.P = 9e4
    BG.MaxTorque = Vector3.new(9e9,9e9,9e9)
    BG.CFrame = root.CFrame
    BG.Parent = root
    
    BV = Instance.new("BodyVelocity")
    BV.MaxForce = Vector3.new(9e9,9e9,9e9)
    BV.Velocity = Vector3.new(0,0,0)
    BV.Parent = root
    
    humanoid.PlatformStand = true
    humanoid.AutoRotate = false
    humanoid.WalkSpeed = 0
    humanoid.JumpPower = 0

    flyConnection = RunService.RenderStepped:Connect(function()
        if not flyAtivo then return end
        local moveVector = Vector3.new()
        local cam = workspace.CurrentCamera

        if UserInputService:IsKeyDown(Enum.KeyCode.W) then moveVector += cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then moveVector -= cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then moveVector -= cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then moveVector += cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then moveVector += Vector3.new(0,1,0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then moveVector -= Vector3.new(0,1,0) end

        if moveVector.Magnitude > 0 then
            BV.Velocity = moveVector.Unit * flySpeed
        else
            BV.Velocity = Vector3.new(0,0,0)
        end

        BG.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
    end)
end

-- Toggle Noclip
local function toggleNoclip(state)
    noclipAtivo = state
    disconnectNoclip()
    if noclipAtivo then
        startNoclip()
        OrionLib:MakeNotification({
            Name="Noclip",
            Content="✅ Noclip ativado!",
            Image="rbxassetid://4483345998",
            Time=2
        })
    else
        OrionLib:MakeNotification({
            Name="Noclip",
            Content="❌ Noclip desativado!",
            Image="rbxassetid://4483345998",
            Time=2
        })
    end
end

-- Toggle Fly
local function toggleFly(state)
    flyAtivo = state
    disconnectFly()
    resetFlyProperties()
    if flyAtivo then
        startFly()
        if noclipAtivo then startNoclip() end
        OrionLib:MakeNotification({
            Name="Fly",
            Content="✅ Fly ativado!",
            Image="rbxassetid://4483345998",
            Time=2
        })
    else
        if noclipAtivo then startNoclip() end
        OrionLib:MakeNotification({
            Name="Fly",
            Content="❌ Fly desativado!",
            Image="rbxassetid://4483345998",
            Time=2
        })
    end
end

-- Adiciona Toggle e Slider à aba Funções OP
local tab = FuncoesEspeciaisTab
tab:AddToggle({Name="Noclip", Default=false, Callback=toggleNoclip})
tab:AddToggle({Name="Fly", Default=false, Callback=toggleFly})
tab:AddSlider({
    Name="Velocidade Fly",
    Min=1,
    Max=2500,
    Default=50,
    Color = Color3.fromRGB(255,255,255),
    Callback=function(value) flySpeed = value end
})

-- Função chamada ao respawnar
local function onCharacterAdded(char)
    task.wait(0.5)
    resetFlyProperties()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.Died:Connect(function()
            if flyAtivo then
                disconnectFly()
                OrionLib:MakeNotification({
                    Name = "Fly",
                    Content = "❌ Fly desativado ao morrer!",
                    Image = "rbxassetid://4483345998",
                    Time = 2
                })
            end
        end)
    end
    if flyAtivo then
        task.defer(function()
            startFly()
            if noclipAtivo then startNoclip() end
            OrionLib:MakeNotification({
                Name = "Fly",
                Content = "✅ Fly reativado ao respawn!",
                Image = "rbxassetid://4483345998",
                Time = 2
            })
        end)
    end
    if noclipAtivo then
        task.defer(function()
            startNoclip()
            OrionLib:MakeNotification({
                Name = "Noclip",
                Content = "✅ Noclip reativado ao respawn!",
                Image = "rbxassetid://4483345998",
                Time = 2
            })
        end)
    end
end

LP.CharacterAdded:Connect(onCharacterAdded)
if LP.Character then
    onCharacterAdded(LP.Character)
end