local FuncoesEspeciaisTab = Window:MakeTab({
    Name = "FUN√á√ïES OP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})
FuncoesEspeciaisTab:AddSection({ Name = "PODERES" })

flyAtivo = false
flySpeed = 50
noclipAtivo = false
flyWasActiveBeforeDeath = false
noclipWasActiveBeforeDeath = false

local flyConnection, noclipConnection
local BG, BV

local function restoreCharacterPhysics()
    local char = LP.Character
    if not char then return end
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if root then
        root.Velocity = Vector3.zero
        root.RotVelocity = Vector3.zero
        root.AssemblyLinearVelocity = Vector3.zero
        root.AssemblyAngularVelocity = Vector3.zero
    end
    if humanoid then
        humanoid.PlatformStand = false
        humanoid.AutoRotate = true
        humanoid:ChangeState(Enum.HumanoidStateType.GettingUp)
        wait(0.1)
        humanoid:ChangeState(Enum.HumanoidStateType.Physics)
    end
end

local function startNoclip(char)
    if noclipConnection then noclipConnection:Disconnect() end
    noclipConnection = RunService.Stepped:Connect(function()
        if not char or not char.Parent then return end
        for _, part in ipairs(char:GetDescendants()) do
            if part:IsA("BasePart") and not part.Anchored and part.Name ~= "HumanoidRootPart" then
                part.CanCollide = false
            end
        end
    end)
end

local function stopNoclip(restorePhysics)
    if noclipConnection then noclipConnection:Disconnect() noclipConnection = nil end
    local char = LP.Character
    if char then
        for _, part in ipairs(char:GetDescendants()) do
            if part:IsA("BasePart") and not part.Anchored then
                part.CanCollide = true
            end
        end
        if restorePhysics then
            restoreCharacterPhysics()
        end
    end
end

local function safeStopFly()
    if flyConnection then flyConnection:Disconnect() flyConnection=nil end
    if BG then BG:Destroy() BG=nil end
    if BV then BV:Destroy() BV=nil end
    restoreCharacterPhysics()
end

local function startFly(char)
    safeStopFly()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end
    BG = Instance.new("BodyGyro")
    BV = Instance.new("BodyVelocity")
    BG.MaxTorque = Vector3.new(9e9,9e9,9e9)
    BG.P = 9e4
    BG.CFrame = root.CFrame
    BG.Parent = root
    BV.MaxForce = Vector3.new(9e9,9e9,9e9)
    BV.Velocity = Vector3.zero
    BV.Parent = root
    humanoid.PlatformStand = true
    humanoid.AutoRotate = false
    flyConnection = RunService.RenderStepped:Connect(function()
        if not flyAtivo then return end
        local cam = workspace.CurrentCamera
        local move = Vector3.zero
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then move += cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then move -= cam.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then move -= cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then move += cam.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then move += Vector3.new(0,1,0) end
        if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then move -= Vector3.new(0,1,0) end
        BV.Velocity = move.Magnitude>0 and move.Unit*flySpeed or Vector3.zero
        BG.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
    end)
end

local function cleanup()
    flyAtivo = false
    noclipAtivo = false
    flyWasActiveBeforeDeath = false
    noclipWasActiveBeforeDeath = false
    safeStopFly()
    stopNoclip(true)
end
cleanup()

local function onCharacter(char)
    char:WaitForChild("HumanoidRootPart")
    noclipAtivo = false
    flyAtivo = false
    local humanoid = char:WaitForChild("Humanoid")
    humanoid.Died:Connect(function()
        if flyAtivo then
            flyWasActiveBeforeDeath = true
            flyAtivo = false
            safeStopFly()
            OrionLib:MakeNotification({Name="Fly",Content="‚ùå Fly desativado (voc√™ morreu)",Image="rbxassetid://4483345998",Time=2})
        end
        if noclipAtivo then
            noclipWasActiveBeforeDeath = true
            noclipAtivo = false
            stopNoclip(true)
            OrionLib:MakeNotification({Name="Noclip",Content="‚ùå Noclip desativado (voc√™ morreu)",Image="rbxassetid://4483345998",Time=2})
        end
    end)
    if flyWasActiveBeforeDeath then
        flyAtivo = true
        startFly(char)
        OrionLib:MakeNotification({Name="Fly",Content="‚úÖ Fly reativado (respawn)",Image="rbxassetid://4483345998",Time=2})
        flyWasActiveBeforeDeath = false
    end
    if noclipWasActiveBeforeDeath then
        noclipAtivo = true
        startNoclip(char)
        OrionLib:MakeNotification({Name="Noclip",Content="‚úÖ Noclip reativado (respawn)",Image="rbxassetid://4483345998",Time=2})
        noclipWasActiveBeforeDeath = false
    end
end

LP.CharacterAdded:Connect(onCharacter)
if LP.Character then
    onCharacter(LP.Character)
end

FuncoesEspeciaisTab:AddToggle({Name="Noclip",Default=false,Save=false,Flag="noclip",Callback=function(state)
    noclipAtivo=state
    if state then
        if LP.Character then startNoclip(LP.Character) end
        OrionLib:MakeNotification({Name="Noclip",Content="‚úÖ Noclip ativado!",Image="rbxassetid://4483345998",Time=2})
    else
        stopNoclip(true)
        OrionLib:MakeNotification({Name="Noclip",Content="‚ùå Noclip desativado!",Image="rbxassetid://4483345998",Time=2})
    end
end})

FuncoesEspeciaisTab:AddToggle({Name="Fly",Default=false,Save=false,Flag="fly",Callback=function(state)
    flyAtivo=state
    if state then
        if LP.Character then startFly(LP.Character) end
        OrionLib:MakeNotification({Name="Fly",Content="‚úÖ Fly ativado!",Image="rbxassetid://4483345998",Time=2})
    else
        safeStopFly()
        OrionLib:MakeNotification({Name="Fly",Content="‚ùå Fly desativado!",Image="rbxassetid://4483345998",Time=2})
    end
end})

FuncoesEspeciaisTab:AddSlider({Name="Fly Speed",Min=1,Max=2500,Default=50,Color=Color3.fromRGB(255,255,255),Save=true,Flag="flySpeed",Callback=function(v) flySpeed=v end})

OrionLib:Init()