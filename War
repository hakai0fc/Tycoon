local function createTPButton(tab, name, pos)
    tab:AddButton({
        Name = name,
        Callback = function()
            if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
                LP.Character:MoveTo(pos)
            else
                warn("Personagem não encontrado ou carregando...")
            end
        end
    })
end

